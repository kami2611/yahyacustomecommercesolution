<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> | E-Commerce Admin</title>
  <link rel="stylesheet" href="/css/theme.css">
  <link rel="stylesheet" href="/css/admin.css">
  <script src="/js/theme.js"></script>
</head>
<body>
  <nav class="admin-nav">
    <div class="nav-brand">
      <a href="/admin">Admin Panel</a>
    </div>
    <ul class="nav-links">
      <li><a href="/admin/homepage">Homepage</a></li>
      <li><a href="/admin/categories" class="active">Categories</a></li>
      <li><a href="/admin/products">Products</a></li>
      <li><a href="/admin/orders">Orders</a></li>
      <li><a href="/admin/announcements">Announcements</a></li>
      <li><a href="/admin/newsletters">Newsletters</a></li>
      <li><a href="/" target="_blank">View Shop</a></li>
      <li><a href="/admin/logout" class="logout-link">Logout</a></li>
      <li><button class="theme-toggle admin-theme-toggle" title="Toggle theme" aria-label="Toggle theme"><span class="theme-icon">ðŸ’»</span></button></li>
    </ul>
  </nav>
  
  <main class="admin-content">
    <% if (typeof error !== 'undefined' && error) { %>
      <div class="alert alert-error">
        <%= error %>
      </div>
    <% } %>
    
    <div class="page-header">
      <h1>Edit Category: <%= category.name %></h1>
      <a href="/admin/categories" class="btn btn-secondary">Back</a>
    </div>
    
    <div class="card">
      <form action="/admin/categories/<%= category._id %>?_method=PUT" method="POST" id="category-form">
        <div class="form-group">
          <label for="name">Category Name *</label>
          <input type="text" id="name" name="name" required class="form-control" 
                 value="<%= category.name %>">
        </div>
        
        <div class="form-group">
          <label for="slug">Slug</label>
          <input type="text" id="slug" name="slug" class="form-control"
                 value="<%= category.slug %>">
        </div>
        
        <div class="form-group">
          <label for="description">Description</label>
          <textarea id="description" name="description" class="form-control" rows="3"
                    placeholder="Category description shown on category page"><%= category.description || '' %></textarea>
        </div>
        
        <div class="form-group">
          <label for="parent">Parent Category</label>
          <select id="parent" name="parent" class="form-control">
            <option value="">-- No Parent (Root Category) --</option>
            <% categories.forEach(cat => { %>
              <option value="<%= cat._id %>" <%= (category.parent && category.parent.toString() === cat._id.toString()) ? 'selected' : '' %>>
                <%= cat.displayName %>
              </option>
            <% }) %>
          </select>
        </div>
        
        <div class="form-group">
          <label>Category Attributes</label>
          <p class="help-text">Define custom attributes for products in this category</p>
          
          <div id="attributes-container">
            <!-- Existing attributes will be populated -->
          </div>
          
          <button type="button" id="add-attribute" class="btn btn-secondary btn-sm">
            + Add Attribute
          </button>
        </div>
        
        <div class="form-actions">
          <button type="submit" class="btn btn-primary">Update Category</button>
        </div>
      </form>
    </div>
  </main>
  
  <script src="/js/admin.js"></script>
  <script>
    // Initialize with existing attributes
    document.addEventListener('DOMContentLoaded', function() {
      const existingAttributes = <%- JSON.stringify(category.attributes || []) %>;
      initAttributeManager(existingAttributes);
    });
  </script>
</body>
</html>
