<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> | E-Commerce Admin</title>
  <link rel="stylesheet" href="/css/theme.css">
  <link rel="stylesheet" href="/css/admin.css">
  <script src="/js/theme.js"></script>
</head>
<body>
  <nav class="admin-nav">
    <div class="nav-brand">
      <a href="/admin">Admin Panel</a>
    </div>
    <ul class="nav-links">
      <li><a href="/admin/homepage">Homepage</a></li>
      <li><a href="/admin/categories">Categories</a></li>
      <li><a href="/admin/products">Products</a></li>
      <li><a href="/admin/brands" class="active">Brands</a></li>
      <li><a href="/admin/orders">Orders</a></li>
      <li><a href="/admin/announcements">Announcements</a></li>
      <li><a href="/admin/newsletters">Newsletters</a></li>
      <li><a href="/" target="_blank">View Shop</a></li>
      <li><a href="/admin/logout" class="logout-link">Logout</a></li>
      <li>
        <select class="theme-select admin-theme-select" title="Select theme" aria-label="Select theme">
          <option value="light">‚òÄÔ∏è Light</option>
          <option value="dark">üåô Dark</option>
          <option value="system">üíª System</option>
        </select>
      </li>
    </ul>
  </nav>
  
  <main class="admin-content">
    <% if (typeof error !== 'undefined' && error) { %>
      <div class="alert alert-error">
        <%= error %>
      </div>
    <% } %>
    
    <div class="page-header">
      <h1>Brands</h1>
      <a href="/admin/brands/create" class="btn btn-primary">Add Brand</a>
    </div>
    
    <div class="card">
      <table class="table">
        <thead>
          <tr>
            <th style="width: 60px;">Image</th>
            <th>Name</th>
            <th>Slug</th>
            <th>Products</th>
            <th>Order</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if (brands.length === 0) { %>
            <tr><td colspan="7" class="text-center">No brands found</td></tr>
          <% } %>
          <% brands.forEach(brand => { %>
            <tr>
              <td>
                <% if (brand.backgroundImage) { %>
                  <img src="<%= brand.backgroundImage %>" alt="<%= brand.name %>" 
                       style="width: 50px; height: 50px; object-fit: cover; border-radius: 4px;"
                       onerror="this.src='/images/placeholder.png'">
                <% } else { %>
                  <div style="width: 50px; height: 50px; background: var(--secondary-color); border-radius: 4px; display: flex; align-items: center; justify-content: center; font-size: 20px;">
                    <%= brand.name.charAt(0).toUpperCase() %>
                  </div>
                <% } %>
              </td>
              <td><strong><%= brand.name %></strong></td>
              <td><code><%= brand.slug %></code></td>
              <td><%= brand.productCount %> products</td>
              <td><%= brand.displayOrder %></td>
              <td>
                <span class="badge <%= brand.isActive ? 'badge-success' : 'badge-secondary' %>">
                  <%= brand.isActive ? 'Active' : 'Inactive' %>
                </span>
              </td>
              <td>
                <a href="/admin/brands/<%= brand._id %>/edit" class="btn btn-sm btn-secondary">Edit</a>
                <form action="/admin/brands/<%= brand._id %>?_method=DELETE" method="POST" style="display:inline;">
                  <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure? This will remove the brand from all products.')">Delete</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </main>
  
  <script src="/js/admin.js"></script>
</body>
</html>
