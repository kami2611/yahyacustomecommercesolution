<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> | E-Commerce Admin</title>
  <link rel="stylesheet" href="/css/admin.css">
  <style>
    .stats-grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 20px;
      margin-bottom: 30px;
    }
    
    .stat-card {
      background: #fff;
      padding: 20px;
      border-radius: 8px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.05);
      text-align: center;
    }
    
    .stat-card h3 {
      font-size: 2rem;
      color: #6b2d5b;
      margin-bottom: 5px;
    }
    
    .stat-card p {
      color: #666;
      font-size: 0.9rem;
    }
    
    .toolbar {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 20px;
      flex-wrap: wrap;
      gap: 15px;
    }
    
    .toolbar-left {
      display: flex;
      gap: 10px;
      align-items: center;
      flex-wrap: wrap;
    }
    
    .toolbar-right {
      display: flex;
      gap: 10px;
    }
    
    .search-box {
      display: flex;
      gap: 5px;
    }
    
    .search-box input {
      padding: 8px 12px;
      border: 1px solid #ddd;
      border-radius: 4px;
      width: 200px;
    }
    
    .status-tabs {
      display: flex;
      gap: 5px;
    }
    
    .status-tab {
      padding: 8px 16px;
      border: 1px solid #ddd;
      background: #fff;
      border-radius: 4px;
      text-decoration: none;
      color: #666;
      font-size: 0.9rem;
    }
    
    .status-tab.active {
      background: #6b2d5b;
      color: #fff;
      border-color: #6b2d5b;
    }
    
    .add-form {
      display: flex;
      gap: 10px;
      margin-bottom: 20px;
      padding: 15px;
      background: #f9f9f9;
      border-radius: 8px;
    }
    
    .add-form input {
      flex: 1;
      padding: 10px 15px;
      border: 1px solid #ddd;
      border-radius: 4px;
    }
    
    .subscribers-table {
      width: 100%;
      background: #fff;
      border-radius: 8px;
      overflow: hidden;
      box-shadow: 0 2px 8px rgba(0,0,0,0.05);
    }
    
    .subscribers-table th,
    .subscribers-table td {
      padding: 12px 15px;
      text-align: left;
      border-bottom: 1px solid #eee;
    }
    
    .subscribers-table th {
      background: #f8f8f8;
      font-weight: 600;
      color: #333;
      font-size: 0.85rem;
      text-transform: uppercase;
    }
    
    .subscribers-table tr:hover {
      background: #fafafa;
    }
    
    .status-badge {
      display: inline-block;
      padding: 4px 10px;
      border-radius: 20px;
      font-size: 0.8rem;
      font-weight: 500;
    }
    
    .status-badge.active {
      background: #e8f5e9;
      color: #2e7d32;
    }
    
    .status-badge.inactive {
      background: #ffebee;
      color: #c62828;
    }
    
    .action-btns {
      display: flex;
      gap: 5px;
    }
    
    .btn-sm {
      padding: 5px 10px;
      font-size: 0.8rem;
      border-radius: 4px;
      border: none;
      cursor: pointer;
    }
    
    .btn-toggle {
      background: #e3f2fd;
      color: #1565c0;
    }
    
    .btn-delete {
      background: #ffebee;
      color: #c62828;
    }
    
    .empty-state {
      text-align: center;
      padding: 40px;
      color: #666;
    }
    
    .message {
      padding: 12px 20px;
      border-radius: 6px;
      margin-bottom: 20px;
    }
    
    .message.success {
      background: #e8f5e9;
      color: #2e7d32;
    }
    
    .message.error {
      background: #ffebee;
      color: #c62828;
    }
    
    .pagination {
      display: flex;
      justify-content: center;
      gap: 5px;
      margin-top: 20px;
    }
    
    .page-link {
      padding: 8px 12px;
      border: 1px solid #ddd;
      border-radius: 4px;
      text-decoration: none;
      color: #333;
    }
    
    .page-link.active {
      background: #6b2d5b;
      color: #fff;
      border-color: #6b2d5b;
    }
    
    @media (max-width: 768px) {
      .stats-grid {
        grid-template-columns: 1fr;
      }
      
      .toolbar {
        flex-direction: column;
        align-items: stretch;
      }
      
      .subscribers-table {
        font-size: 0.85rem;
      }
      
      .subscribers-table th:nth-child(3),
      .subscribers-table td:nth-child(3),
      .subscribers-table th:nth-child(4),
      .subscribers-table td:nth-child(4) {
        display: none;
      }
    }
  </style>
</head>
<body>
  <nav class="admin-nav">
    <div class="nav-brand">
      <a href="/admin">Admin Panel</a>
    </div>
    <ul class="nav-links">
      <li><a href="/admin/homepage">Homepage</a></li>
      <li><a href="/admin/categories">Categories</a></li>
      <li><a href="/admin/products">Products</a></li>
      <li><a href="/admin/orders">Orders</a></li>
      <li><a href="/admin/announcements">Announcements</a></li>
      <li><a href="/admin/newsletters" class="active">Newsletters</a></li>
      <li><a href="/" target="_blank">View Shop</a></li>
      <li><a href="/admin/logout" class="logout-link">Logout</a></li>
    </ul>
  </nav>
  
  <main class="admin-content">
    <div class="page-header">
      <h1>Newsletter Subscribers</h1>
    </div>
    
    <% 
      const urlParams = new URLSearchParams(typeof window !== 'undefined' ? window.location.search : '');
      const message = typeof req !== 'undefined' ? req.query.message : '';
      const error = typeof req !== 'undefined' ? req.query.error : '';
    %>
    
    <!-- Stats -->
    <div class="stats-grid">
      <div class="stat-card">
        <h3><%= stats.total %></h3>
        <p>Total Subscribers</p>
      </div>
      <div class="stat-card">
        <h3><%= stats.active %></h3>
        <p>Active Subscribers</p>
      </div>
      <div class="stat-card">
        <h3><%= stats.inactive %></h3>
        <p>Unsubscribed</p>
      </div>
    </div>
    
    <!-- Add New Subscriber -->
    <form action="/admin/newsletters" method="POST" class="add-form">
      <input type="email" name="email" placeholder="Enter email address to add subscriber" required>
      <button type="submit" class="btn btn-primary">Add Subscriber</button>
    </form>
    
    <!-- Toolbar -->
    <div class="toolbar">
      <div class="toolbar-left">
        <div class="status-tabs">
          <a href="/admin/newsletters?status=all&search=<%= filters.search %>" 
             class="status-tab <%= filters.status === 'all' ? 'active' : '' %>">All</a>
          <a href="/admin/newsletters?status=active&search=<%= filters.search %>" 
             class="status-tab <%= filters.status === 'active' ? 'active' : '' %>">Active</a>
          <a href="/admin/newsletters?status=inactive&search=<%= filters.search %>" 
             class="status-tab <%= filters.status === 'inactive' ? 'active' : '' %>">Inactive</a>
        </div>
        
        <form action="/admin/newsletters" method="GET" class="search-box">
          <input type="hidden" name="status" value="<%= filters.status %>">
          <input type="text" name="search" placeholder="Search by email..." value="<%= filters.search %>">
          <button type="submit" class="btn btn-secondary btn-sm">Search</button>
        </form>
      </div>
      
      <div class="toolbar-right">
        <a href="/admin/newsletters/export?status=active" class="btn btn-secondary">Export Active (CSV)</a>
        <a href="/admin/newsletters/export?status=all" class="btn btn-secondary">Export All (CSV)</a>
      </div>
    </div>
    
    <!-- Subscribers Table -->
    <% if (subscribers.length > 0) { %>
      <table class="subscribers-table">
        <thead>
          <tr>
            <th>Email</th>
            <th>Status</th>
            <th>Subscribed</th>
            <th>Source</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% subscribers.forEach(sub => { %>
            <tr>
              <td><%= sub.email %></td>
              <td>
                <span class="status-badge <%= sub.isActive ? 'active' : 'inactive' %>">
                  <%= sub.isActive ? 'Active' : 'Inactive' %>
                </span>
              </td>
              <td><%= sub.subscribedAt.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' }) %></td>
              <td><%= sub.source %></td>
              <td class="action-btns">
                <form action="/admin/newsletters/<%= sub._id %>/toggle" method="POST" style="display:inline;">
                  <button type="submit" class="btn-sm btn-toggle">
                    <%= sub.isActive ? 'Deactivate' : 'Activate' %>
                  </button>
                </form>
                <form action="/admin/newsletters/<%= sub._id %>?_method=DELETE" method="POST" style="display:inline;" 
                      onsubmit="return confirm('Delete this subscriber?');">
                  <button type="submit" class="btn-sm btn-delete">Delete</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
      
      <!-- Pagination -->
      <% if (pagination.totalPages > 1) { %>
        <div class="pagination">
          <% if (pagination.hasPrev) { %>
            <a href="/admin/newsletters?page=<%= pagination.currentPage - 1 %>&status=<%= filters.status %>&search=<%= filters.search %>" class="page-link">← Prev</a>
          <% } %>
          
          <% for (let i = 1; i <= pagination.totalPages; i++) { %>
            <a href="/admin/newsletters?page=<%= i %>&status=<%= filters.status %>&search=<%= filters.search %>" 
               class="page-link <%= i === pagination.currentPage ? 'active' : '' %>"><%= i %></a>
          <% } %>
          
          <% if (pagination.hasNext) { %>
            <a href="/admin/newsletters?page=<%= pagination.currentPage + 1 %>&status=<%= filters.status %>&search=<%= filters.search %>" class="page-link">Next →</a>
          <% } %>
        </div>
      <% } %>
    <% } else { %>
      <div class="empty-state">
        <p>No subscribers found.</p>
      </div>
    <% } %>
  </main>
  
  <script src="/js/admin.js"></script>
</body>
</html>
