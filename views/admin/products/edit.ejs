<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> | E-Commerce Admin</title>
  <link rel="stylesheet" href="/css/admin.css">
</head>
<body>
  <nav class="admin-nav">
    <div class="nav-brand">
      <a href="/admin">Admin Panel</a>
    </div>
    <ul class="nav-links">
      <li><a href="/admin/categories">Categories</a></li>
      <li><a href="/admin/products">Products</a></li>
      <li><a href="/" target="_blank">View Shop</a></li>
    </ul>
  </nav>
  
  <main class="admin-content">
    <% if (typeof error !== 'undefined' && error) { %>
      <div class="alert alert-error">
        <%= error %>
      </div>
    <% } %>
    
    <div class="page-header">
      <h1>Edit Product: <%= product.name %></h1>
      <a href="/admin/products" class="btn btn-secondary">Back</a>
    </div>
    
    <div class="card">
      <form action="/admin/products/<%= product._id %>?_method=PUT" method="POST" id="product-form">
        <div class="form-row">
          <div class="form-group">
            <label for="name">Product Name *</label>
            <input type="text" id="name" name="name" required class="form-control" 
                   value="<%= product.name %>">
          </div>
          
          <div class="form-group">
            <label for="slug">Slug</label>
            <input type="text" id="slug" name="slug" class="form-control"
                   value="<%= product.slug %>">
          </div>
        </div>
        
        <div class="form-group">
          <label for="description">Description</label>
          <textarea id="description" name="description" class="form-control" rows="4"><%= product.description %></textarea>
        </div>
        
        <div class="form-row">
          <div class="form-group">
            <label for="price">Price *</label>
            <input type="number" id="price" name="price" required class="form-control" 
                   step="0.01" min="0" value="<%= product.price %>">
          </div>
          
          <div class="form-group">
            <label for="originalPrice">Original Price (for discounts)</label>
            <input type="number" id="originalPrice" name="originalPrice" class="form-control" 
                   step="0.01" min="0" value="<%= product.originalPrice || '' %>"
                   placeholder="Leave empty if no discount">
          </div>
        </div>
        
        <div class="form-row">
          <div class="form-group">
            <label for="stock">Stock</label>
            <input type="number" id="stock" name="stock" class="form-control" 
                   min="0" value="<%= product.stock %>">
          </div>
        </div>
        
        <div class="form-group">
          <label for="category">Category *</label>
          <select id="category" name="category" required class="form-control">
            <option value="">-- Select Category --</option>
            <% categories.forEach(cat => { %>
              <option value="<%= cat._id %>" <%= (product.category && product.category.toString() === cat._id.toString()) ? 'selected' : '' %>>
                <%= cat.displayName %>
              </option>
            <% }) %>
          </select>
        </div>
        
        <!-- Featured Product Options -->
        <div class="form-group">
          <label>Featured Product Options</label>
          <div class="checkbox-group">
            <label class="checkbox-label">
              <input type="checkbox" name="isNewOffer" value="true" <%= product.isNewOffer ? 'checked' : '' %>>
              Show in "New Offers" section
            </label>
            <label class="checkbox-label">
              <input type="checkbox" name="isBestOffer" value="true" <%= product.isBestOffer ? 'checked' : '' %>>
              Show in "Best Offers" section
            </label>
            <label class="checkbox-label">
              <input type="checkbox" name="isFeatured" value="true" <%= product.isFeatured ? 'checked' : '' %>>
              Show in "Products You'll Love" section
            </label>
          </div>
        </div>
        
        <div class="form-group">
          <label for="carouselImage">Carousel Image URL</label>
          <input type="text" id="carouselImage" name="carouselImage" class="form-control"
                 placeholder="https://example.com/image.jpg" value="<%= product.carouselImage || '' %}">
          <small class="help-text">Add image URL to show this product in the homepage carousel</small>
        </div>
        
        <!-- Dynamic Metadata Fields Container -->
        <div id="metadata-container" class="metadata-section" style="<%= attributes && attributes.length > 0 ? '' : 'display: none;' %>">
          <h3>Category Attributes</h3>
          <p class="help-text">Fill in the attributes for this category</p>
          <div id="metadata-fields">
            <% if (attributes && attributes.length > 0) { %>
              <% attributes.forEach(attr => { %>
                <% const metadataValue = product.metadata ? product.metadata.get(attr.key) : ''; %>
                <div class="form-group metadata-field">
                  <label for="metadata_<%= attr.key %>">
                    <%= attr.label %>
                    <% if (attr.inheritedFrom) { %>
                      <span class="inherited-badge">from <%= attr.inheritedFrom %></span>
                    <% } %>
                  </label>
                  
                  <% if (attr.fieldType === 'select' && attr.options && attr.options.length > 0) { %>
                    <select id="metadata_<%= attr.key %>" name="metadata[<%= attr.key %>]" class="form-control">
                      <option value="">-- Select --</option>
                      <% attr.options.forEach(opt => { %>
                        <option value="<%= opt %>" <%= metadataValue === opt ? 'selected' : '' %>><%= opt %></option>
                      <% }) %>
                    </select>
                  <% } else if (attr.fieldType === 'number') { %>
                    <input type="number" id="metadata_<%= attr.key %>" name="metadata[<%= attr.key %>]" 
                           class="form-control" value="<%= metadataValue %>">
                  <% } else { %>
                    <input type="text" id="metadata_<%= attr.key %>" name="metadata[<%= attr.key %>]" 
                           class="form-control" value="<%= metadataValue %>">
                  <% } %>
                </div>
              <% }) %>
            <% } %>
          </div>
        </div>
        
        <div class="form-actions">
          <button type="submit" class="btn btn-primary">Update Product</button>
        </div>
      </form>
    </div>
  </main>
  
  <script src="/js/admin.js"></script>
  <script>
    // Initialize product form with dynamic attribute fetching
    document.addEventListener('DOMContentLoaded', function() {
      const existingMetadata = <%- JSON.stringify(product.getMetadataObject ? product.getMetadataObject() : {}) %>;
      initProductForm(existingMetadata);
    });
  </script>
</body>
</html>
