<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <%- include('../partials/seo-head') %>
  <link rel="stylesheet" href="/css/theme.css">
  <link rel="stylesheet" href="/css/home.css">
  <link rel="stylesheet" href="/css/category.css">
  <script src="/js/theme.js"></script>
  <style>
    .brands-page {
      padding: 20px 0 40px;
    }
    
    .brands-header {
      margin-bottom: 30px;
    }
    
    .brands-header h1 {
      font-size: 2rem;
      margin-bottom: 10px;
    }
    
    .brands-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
      gap: 24px;
    }
    
    .brand-card {
      position: relative;
      border-radius: 12px;
      overflow: hidden;
      background: var(--card-bg);
      box-shadow: 0 2px 8px rgba(0,0,0,0.08);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      aspect-ratio: 16/9;
    }
    
    .brand-card:hover {
      transform: translateY(-4px);
      box-shadow: 0 8px 24px rgba(0,0,0,0.15);
    }
    
    .brand-card-link {
      display: block;
      width: 100%;
      height: 100%;
      text-decoration: none;
      color: inherit;
    }
    
    .brand-card-image {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
    
    .brand-card-overlay {
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      padding: 20px;
      background: linear-gradient(to top, rgba(0,0,0,0.8) 0%, rgba(0,0,0,0.4) 50%, transparent 100%);
      color: white;
    }
    
    .brand-card-name {
      font-size: 1.25rem;
      font-weight: 600;
      margin: 0 0 4px;
    }
    
    .brand-card-count {
      font-size: 0.875rem;
      opacity: 0.9;
    }
    
    .brand-card-placeholder {
      width: 100%;
      height: 100%;
      display: flex;
      align-items: center;
      justify-content: center;
      background: linear-gradient(135deg, var(--primary-color), var(--accent-color));
      color: white;
      font-size: 3rem;
      font-weight: bold;
    }
    
    .no-brands {
      text-align: center;
      padding: 60px 20px;
      color: var(--text-muted);
    }
    
    .no-brands h2 {
      margin-bottom: 10px;
    }
    
    @media (max-width: 768px) {
      .brands-grid {
        grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
        gap: 16px;
      }
      
      .brands-header h1 {
        font-size: 1.5rem;
      }
    }
  </style>
</head>
<body>
  <%- include('../partials/header') %>
  
  <%- include('../partials/mega-nav') %>
  
  <main class="brands-page">
    <div class="container">
      <!-- Breadcrumbs -->
      <%- include('../partials/breadcrumbs', { breadcrumbs: breadcrumbs }) %>
      
      <!-- Brands Header -->
      <div class="brands-header">
        <h1>Shop by Brands</h1>
        <p>Explore products from your favorite brands</p>
      </div>
      
      <!-- Brands Grid -->
      <% if (brands && brands.length > 0) { %>
        <div class="brands-grid">
          <% brands.forEach(brand => { %>
            <div class="brand-card">
              <a href="/shop/brand/<%= brand.slug %>" class="brand-card-link">
                <% if (brand.backgroundImage) { %>
                  <img src="<%= brand.backgroundImage %>" alt="<%= brand.name %>" class="brand-card-image"
                       onerror="this.parentElement.innerHTML='<div class=\'brand-card-placeholder\'><%= brand.name.charAt(0).toUpperCase() %></div>'">
                <% } else { %>
                  <div class="brand-card-placeholder">
                    <%= brand.name.charAt(0).toUpperCase() %>
                  </div>
                <% } %>
                <div class="brand-card-overlay">
                  <h3 class="brand-card-name"><%= brand.name %></h3>
                  <span class="brand-card-count"><%= brand.productCount %> product<%= brand.productCount !== 1 ? 's' : '' %></span>
                </div>
              </a>
            </div>
          <% }) %>
        </div>
      <% } else { %>
        <div class="no-brands">
          <h2>No brands available</h2>
          <p>Check back soon for new brands!</p>
          <a href="/" class="btn btn-primary" style="margin-top: 20px;">Continue Shopping</a>
        </div>
      <% } %>
    </div>
  </main>
  
  <%- include('../partials/footer') %>
  
  <%- include('../partials/cart-popup') %>
</body>
</html>
