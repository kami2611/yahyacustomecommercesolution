<header class="site-header">
  <div class="header-mobile">
    <button class="menu-toggle" id="mobile-menu-toggle" aria-label="Open menu">
      <span class="menu-icon">‚ò∞</span>
    </button>
    <a href="/" class="logo-mobile">
      <img src="/images/logo.png" alt="Logo" onerror="this.style.display='none'; this.nextElementSibling.style.display='block';">
      <span class="logo-text">E-Commerce Store</span>
    </a>
    <div class="header-actions-mobile">
      <a href="/cart" class="icon-btn cart-icon-link">
        <span class="cart-icon">üõí</span>
        <span class="cart-badge" id="header-cart-badge-mobile">0</span>
      </a>
      <a href="/signin" class="icon-btn">
        <span class="user-icon">üë§</span>
      </a>
    </div>
  </div>
  
  <div class="header-desktop">
    <div class="container header-container">
      <a href="/" class="logo">
        <img src="/images/logo.png" alt="Logo" onerror="this.style.display='none'; this.nextElementSibling.style.display='block';">
        <span class="logo-text">E-Commerce Store</span>
      </a>
      
      <div class="search-bar-wrapper">
        <form action="/search" method="GET" class="search-form">
          <input type="text" name="q" placeholder="Search products or projects" class="search-input">
          <button type="submit" class="search-btn">üîç</button>
        </form>
      </div>
      
      <div class="header-actions">
        <a href="/signin" class="btn-signin">Sign in</a>
        <a href="/cart" class="btn-cart">
          <span class="cart-icon">üõí</span>
