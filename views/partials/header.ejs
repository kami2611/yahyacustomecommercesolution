<!-- Mobile Menu Sidebar -->
<div class="mobile-menu-overlay" id="mobile-menu-overlay">
  <div class="mobile-menu" id="mobile-menu">
    <div class="mobile-menu-header">
      <span class="mobile-menu-title">Menu</span>
      <button class="mobile-menu-close" id="mobile-menu-close" aria-label="Close menu">‚úï</button>
    </div>
    
    <nav class="mobile-nav">
      <a href="/" class="mobile-nav-link">
        <span>üè†</span> Home
      </a>
      
      <% if (typeof nestedCategories !== 'undefined' && nestedCategories && nestedCategories.length > 0) { %>
        <div class="mobile-nav-section">
          <span class="mobile-nav-section-title">Categories</span>
        </div>
        
        <%
          // Recursive function to render category accordion
          function renderCategoryAccordion(cats, level) {
            level = level || 0;
            let html = '';
            cats.forEach(function(category) {
              const hasChildren = category.children && category.children.length > 0;
              const paddingLeft = level * 15;
              
              html += '<div class="mobile-accordion-item" data-level="' + level + '">';
              
              if (hasChildren) {
                html += '<button class="mobile-accordion-header" style="padding-left: ' + (20 + paddingLeft) + 'px;">';
                html += '<span>' + category.name + '</span>';
                html += '<span class="accordion-arrow">‚Ä∫</span>';
                html += '</button>';
                html += '<div class="mobile-accordion-content">';
                html += '<a href="/category/' + category.slug + '" class="mobile-accordion-link mobile-accordion-browse-all" style="padding-left: ' + (35 + paddingLeft) + 'px;">';
                html += 'üîç Browse all ' + category.name;
                html += '</a>';
                // Recursively render children
                html += renderCategoryAccordion(category.children, level + 1);
                html += '</div>';
              } else {
                html += '<a href="/category/' + category.slug + '" class="mobile-accordion-header mobile-accordion-header-link" style="padding-left: ' + (20 + paddingLeft) + 'px;">';
                html += '<span>' + category.name + '</span>';
                html += '</a>';
              }
              
              html += '</div>';
            });
            return html;
          }
        %>
        <%- renderCategoryAccordion(nestedCategories, 0) %>
      <% } else if (typeof categories !== 'undefined' && categories && categories.length > 0) { %>
        <!-- Fallback to flat categories if nestedCategories not available -->
        <div class="mobile-nav-section">
          <span class="mobile-nav-section-title">Categories</span>
        </div>
        
        <% 
          const rootCats = categories.filter(function(c) { return !c.parent; });
          rootCats.forEach(function(category) { 
            const children = categories.filter(function(c) { 
              return c.parent && c.parent.toString() === category._id.toString(); 
            });
        %>
          <div class="mobile-accordion-item">
            <% if (children.length > 0) { %>
              <button class="mobile-accordion-header">
                <span><%= category.name %></span>
                <span class="accordion-arrow">‚Ä∫</span>
              </button>
              <div class="mobile-accordion-content">
                <a href="/category/<%= category.slug %>" class="mobile-accordion-link mobile-accordion-browse-all">
                  üîç Browse all <%= category.name %>
                </a>
                <% children.forEach(function(child) { %>
                  <a href="/category/<%= child.slug %>" class="mobile-accordion-link">
                    <%= child.name %>
                  </a>
                <% }) %>
              </div>
            <% } else { %>
              <a href="/category/<%= category.slug %>" class="mobile-accordion-header mobile-accordion-header-link">
                <span><%= category.name %></span>
              </a>
            <% } %>
          </div>
        <% }) %>
      <% } %>
      
      <div class="mobile-nav-divider"></div>
      
      <a href="/cart" class="mobile-nav-link">
        <span>
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="9" cy="21" r="1"/>
            <circle cx="20" cy="21" r="1"/>
